<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ivTopMovie"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:scaleType="centerCrop"
        android:scrollY="140dp"
        android:src="@drawable/new_posters_for_upcoming_pixar_film_luca"/>

    <ImageView
        android:id="@+id/ivBg"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_below="@id/ivTopMovie"
        android:layout_marginTop="-100dp"
        android:background="@drawable/rounded_corners_rv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMovies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/ivBg"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/ivPlayTrailer"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="325dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_view_trailer" />

    <ImageView
        android:id="@+id/ivMovieInfo"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_movie_info" />


</RelativeLayout>